{
    "name": "olilaban/laravel-pbkdf2-hasher",
    "description": "A PBKDF2 hash driver for Laravel applications.",
    "homepage": "https://github.com/oli-laban/laravel-pbkdf2-hasher",
    "keywords": [
        "laravel",
        "pbkdf2",
        "password",
        "hash",
        "driver"
    ],
    "license": "MIT",
    "type": "library",
    "require": {
        "php": ">=8.2",
        "laravel/framework": "^11.0|^12.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.7",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "OliLaban\\LaravelPbkdf2Hasher\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Oli Laban",
            "email": "oli@olilaban.dev"
        }
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": [
            "@php vendor/bin/pest --colors=always"
        ],
        "lint": [
            "@php vendor/bin/phpstan analyse --verbose --ansi"
        ]
    }
}
